{
  "id": null,
  "title": "Zeek Network Monitor - Working",
  "tags": ["zeek", "network", "working"],
  "style": "dark",
  "timezone": "",
  "editable": true,
  "graphTooltip": 0,
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "refresh": "30s",
  "schemaVersion": 39,
  "version": 1,
  "panels": [
    {
      "id": 1,
      "title": "Network Connections (1h)",
      "type": "stat",
      "targets": [
        {
          "refId": "A",
          "expr": "count_over_time({job=\"zeek\", log_type=\"conn\"}[1h])",
          "datasource": { "type": "loki", "uid": "${DS_LOKI}" }
        }
      ],
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 0 },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "colorMode": "value",
        "graphMode": "area"
      },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 100 },
              { "color": "orange", "value": 500 }
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "title": "Connection Rate",
      "type": "timeseries",
      "targets": [
        {
          "refId": "A",
          "expr": "rate({job=\"zeek\", log_type=\"conn\"}[5m])",
          "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
          "legendFormat": "Connections/sec"
        }
      ],
      "gridPos": { "h": 6, "w": 18, "x": 6, "y": 0 },
      "options": {
        "legend": { "displayMode": "hidden" },
        "tooltip": { "mode": "single" }
      },
      "fieldConfig": {
        "defaults": {
          "custom": { "drawStyle": "line", "fillOpacity": 10 },
          "color": { "mode": "palette-classic" },
          "unit": "reqps"
        }
      }
    },
    {
      "id": 3,
      "title": "Top Protocols",
      "type": "table",
      "targets": [
        {
          "refId": "A",
          "expr": "topk(10, count by (proto) (count_over_time({job=\"zeek\", log_type=\"conn\"}[1h])))",
          "instant": true,
          "datasource": { "type": "loki", "uid": "${DS_LOKI}" }
        }
      ],
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 6 },
      "transformations": [
        { "id": "seriesToRows", "options": {} },
        {
          "id": "organize",
          "options": {
            "renameByName": { "Metric": "Protocol", "Value": "Connections" },
            "excludeByName": { "Time": true }
          }
        }
      ],
      "options": { "showHeader": true }
    },
    {
      "id": 4,
      "title": "Top Source IPs",
      "type": "table", 
      "targets": [
        {
          "refId": "A",
          "expr": "topk(10, count by (src_ip) (count_over_time({job=\"zeek\", log_type=\"conn\"}[1h])))",
          "instant": true,
          "datasource": { "type": "loki", "uid": "${DS_LOKI}" }
        }
      ],
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 6 },
      "transformations": [
        { "id": "seriesToRows", "options": {} },
        {
          "id": "organize",
          "options": {
            "renameByName": { "Metric": "Source IP", "Value": "Connections" },
            "excludeByName": { "Time": true }
          }
        }
      ],
      "options": { "showHeader": true }
    },
    {
      "id": 5,  
      "title": "Top Destinations",
      "type": "table",
      "targets": [
        {
          "refId": "A",
          "expr": "topk(10, count by (dest_ip) (count_over_time({job=\"zeek\", log_type=\"conn\"}[1h])))",
          "instant": true,
          "datasource": { "type": "loki", "uid": "${DS_LOKI}" }
        }
      ],
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 6 },
      "transformations": [
        { "id": "seriesToRows", "options": {} },
        {
          "id": "organize",
          "options": {
            "renameByName": { "Metric": "Destination IP", "Value": "Connections" },
            "excludeByName": { "Time": true }
          }
        }
      ],
      "options": { "showHeader": true }
    },
    {
      "id": 6,
      "title": "Recent Network Connections",
      "type": "table",
      "targets": [
        {
          "refId": "A",
          "expr": "{job=\"zeek\", log_type=\"conn\"} | json",
          "datasource": { "type": "loki", "uid": "${DS_LOKI}" }
        }
      ],
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 14 },
      "options": { "showHeader": true },
      "transformations": [
        {
          "id": "organize",
          "options": {
            "indexByName": {
              "Time": 0,
              "src_ip": 1,
              "src_port": 2,
              "dest_ip": 3,
              "dest_port": 4,
              "proto": 5,
              "duration": 6,
              "orig_bytes": 7,
              "resp_bytes": 8,
              "conn_state": 9
            },
            "renameByName": {
              "src_ip": "Source IP",
              "src_port": "Src Port",
              "dest_ip": "Dest IP", 
              "dest_port": "Dst Port",
              "proto": "Protocol",
              "duration": "Duration",
              "orig_bytes": "Sent Bytes",
              "resp_bytes": "Recv Bytes",
              "conn_state": "State"
            }
          }
        }
      ]
    }
  ],
  "templating": { "list": [] },
  "annotations": {
    "list": []
  },
  "uid": "zeek-working",
  "weekStart": ""
}
