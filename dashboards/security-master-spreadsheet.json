{
  "id": null,
  "title": "Security Monitoring Spreadsheet (main)",
  "tags": ["security", "spreadsheet", "master", "comprehensive"],
  "style": "dark",
  "timezone": "",
  "editable": true,
  "graphTooltip": 1,
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "refresh": "10s",
  "schemaVersion": 39,
  "version": 1,
  "templating": {
    "list": [
      {
        "allValue": ".*",
        "current": {
          "selected": true,
          "text": ["All"],
          "value": ["$__all"]
        },
        "hide": 0,
        "includeAll": true,
        "label": "Severity",
        "multi": true,
        "name": "severity",
        "options": [],
        "query": "label_values({job=\"suricata\", event_type=\"alert\"}, alert_severity)",
        "refresh": 2,
        "regex": "",
        "skipUrlSync": false,
        "sort": 1,
        "type": "query",
        "datasource": {
          "type": "loki",
          "uid": "loki"
        }
      },
      {
        "allValue": ".*",
        "current": {
          "selected": true,
          "text": ["All"],
          "value": ["$__all"]
        },
        "hide": 0,
        "includeAll": true,
        "label": "Category",
        "multi": true,
        "name": "category",
        "options": [],
        "query": "label_values({job=\"suricata\", event_type=\"alert\"}, alert_category)",
        "refresh": 2,
        "regex": "",
        "skipUrlSync": false,
        "sort": 1,
        "type": "query",
        "datasource": {
          "type": "loki",
          "uid": "loki"
        }
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "title": "Current Alert Summary",
      "type": "stat",
      "targets": [
        {
          "refId": "A",
          "expr": "sum by () (count_over_time({job=\"suricata\", event_type=\"alert\", alert_severity=\"1\"}[5m]))",
          "datasource": { "type": "loki", "uid": "loki" },
          "legendFormat": "ðŸ”´ High (Severity 1)"
        },
        {
          "refId": "C",
          "expr": "count_over_time({job=\"suricata\", event_type=\"alert\", alert_severity=\"3\", alert_category=~\"$category\"}[1h])",
          "datasource": { "type": "loki", "uid": "loki" },
          "legendFormat": "ðŸŸ¡ Low (Severity 3)"
        }
      ],
      "gridPos": { "h": 4, "w": 24, "x": 0, "y": 0 },
      "options": {
        "reduceOptions": { 
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "colorMode": "value",
        "graphMode": "none",
        "orientation": "horizontal",
        "textMode": "value_and_name",
        "wideLayout": true,
        "showThresholdLabels": false,
        "showThresholdMarkers": false
      },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "hideFrom": {
              "legend": false,
              "tooltip": false,
              "vis": false
            }
          },
          "mappings": [
            {
              "options": {
                "0": { "text": "âœ… No Alerts", "color": "green" }
              },
              "type": "value"
            }
          ],
          "unit": "short",
          "min": 0,
          "max": 100
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "ðŸ”´ High (Severity 1)" },
            "properties": [
              { "id": "color", "value": { "mode": "fixed", "fixedColor": "red" } },
              { "id": "custom.hideFrom.legend", "value": false }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "ðŸŸ¡ Low (Severity 3)" },
            "properties": [
              { "id": "color", "value": { "mode": "fixed", "fixedColor": "yellow" } },
              { "id": "custom.hideFrom.legend", "value": false }
            ]
          }
        ]
      }
    },
    {
      "id": 2,
      "title": "Alert Timeline (Last 6 Hours)",
      "type": "timeseries",
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (alert_severity) (count_over_time({job=\"suricata\", event_type=\"alert\", alert_severity=~\"$severity\"} |= \"\" [5m]))",
          "datasource": { "type": "loki", "uid": "loki" }
        }
      ],
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 4 },
      "options": {
        "tooltip": { "mode": "multi", "sort": "none" },
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "calcs": ["lastNotNull", "max", "mean"],
          "values": ["value"]
        }
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "barAlignment": 0,
            "lineWidth": 2,
            "fillOpacity": 20,
            "gradientMode": "opacity",
            "spanNulls": false,
            "insertNulls": false,
            "showPoints": "auto",
            "pointSize": 5,
            "stacking": { "mode": "none", "group": "A" },
            "axisPlacement": "auto",
            "axisLabel": "",
            "axisColorMode": "text",
            "scaleDistribution": { "type": "linear" },
            "hideFrom": {
              "legend": false,
              "tooltip": false,
              "vis": false
            },
            "thresholdsStyle": { "mode": "off" }
          },
          "color": { "mode": "palette-classic" },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 80 }
            ]
          },
          "unit": "short"
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "alert_severity=1" },
            "properties": [
              { "id": "color", "value": { "mode": "fixed", "fixedColor": "red" } },
              { "id": "displayName", "value": "High (Sev 1)" }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "alert_severity=3" },
            "properties": [
              { "id": "color", "value": { "mode": "fixed", "fixedColor": "yellow" } },
              { "id": "displayName", "value": "Low (Sev 3)" }
            ]
          }
        ]
      }
    },
    {
      "id": 3,
      "title": "Alert Signatures by Frequency (Top 15)",
      "type": "table",
      "targets": [
        {
          "refId": "A",
          "expr": "topk(15, count by (alert_signature) (count_over_time({job=\"suricata\", event_type=\"alert\", alert_severity=~\"$severity\", alert_category=~\"$category\"} | json [6h])))",
          "datasource": { "type": "loki", "uid": "loki" },
          "instant": true
        }
      ],
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 12 },
      "transformations": [
        { "id": "seriesToRows", "options": {} },
        {
          "id": "organize",
          "options": {
            "renameByName": { 
              "Metric": "Alert Signature", 
              "Value": "Count (6h)" 
            },
            "excludeByName": { "Time": true }
          }
        },
        {
          "id": "sortBy",
          "options": {
            "fields": {},
            "sort": [{ "field": "Count (6h)", "desc": true }]
          }
        }
      ],
      "options": {
        "showHeader": true,
        "sortBy": [{ "desc": true, "displayName": "Count (6h)" }]
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "cellOptions": { "type": "auto" },
            "inspect": false,
            "filterable": true
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 5 },
              { "color": "orange", "value": 20 },
              { "color": "red", "value": 50 }
            ]
          },
          "color": { "mode": "thresholds" }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Count (6h)" },
            "properties": [
              { "id": "custom.cellOptions", "value": { "type": "color-background" } },
              { "id": "custom.width", "value": 150 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Alert Signature" },
            "properties": [
              { "id": "custom.width", "value": 600 }
            ]
          }
        ]
      }
    },
    {
      "id": 4,
      "title": "Recent Critical Alerts (Severity 1)",
      "type": "table",
      "targets": [
        {
          "refId": "A",
          "expr": "{job=\"suricata\", event_type=\"alert\", alert_severity=\"1\"} | json | line_format \"{{.timestamp}}|{{.src_ip}}:{{.src_port}}|{{.dest_ip}}:{{.dest_port}}|{{.proto}}|{{.alert.signature}}|{{.alert.category}}\"",
          "datasource": { "type": "loki", "uid": "loki" }
        }
      ],
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 22 },
      "transformations": [
        {
          "id": "extractFields",
          "options": {
            "format": "auto",
            "source": "Line"
          }
        },
        {
          "id": "organize",
          "options": {
            "renameByName": {
              "Field 1": "Timestamp",
              "Field 2": "Source",
              "Field 3": "Destination", 
              "Field 4": "Protocol",
              "Field 5": "Alert Signature",
              "Field 6": "Category"
            },
            "excludeByName": { "Time": true, "Line": true, "id": true, "labels": true, "tsNs": true }
          }
        }
      ],
      "options": {
        "showHeader": true,
        "sortBy": [{ "desc": true, "displayName": "Timestamp" }]
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "cellOptions": { "type": "auto" },
            "inspect": false,
            "filterable": true
          },
          "mappings": [],
          "color": { "mode": "fixed", "fixedColor": "red" }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Alert Signature" },
            "properties": [
              { "id": "custom.width", "value": 350 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Category" },
            "properties": [
              { "id": "custom.width", "value": 200 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Timestamp" },
            "properties": [
              { "id": "custom.width", "value": 180 }
            ]
          }
        ]
      }
    },
    {
      "id": 5,
      "title": "All Live Security Logs (Real-time Feed)",
      "type": "logs",
      "targets": [
        {
          "refId": "A",
          "expr": "{job=\"suricata\", event_type=\"alert\", alert_severity=~\"$severity\", alert_category=~\"$category\"} | json",
          "datasource": { "type": "loki", "uid": "loki" }
        }
      ],
      "gridPos": { "h": 14, "w": 24, "x": 0, "y": 32 },
      "options": {
        "showTime": true,
        "showLabels": false,
        "showCommonLabels": true,
        "wrapLogMessage": true,
        "prettifyLogMessage": true,
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      }
    }
  ],
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": { "type": "grafana", "uid": "-- Grafana --" },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "target": {
          "limit": 100,
          "matchAny": false,
          "tags": [],
          "type": "dashboard"
        },
        "type": "dashboard"
      }
    ]
  },
  "uid": "security-master-spreadsheet",
  "weekStart": ""
}
