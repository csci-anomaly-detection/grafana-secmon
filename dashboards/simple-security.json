{
  "id": null,
  "title": "Simple Security Monitor",
  "tags": ["security", "simple"],
  "style": "dark",
  "timezone": "",
  "editable": true,
  "graphTooltip": 0,
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "refresh": "30s",
  "schemaVersion": 39,
  "version": 1,
  "panels": [
    {
      "id": 1,
      "title": "Alerts in Last Hour",
      "type": "stat",
      "targets": [
        {
          "refId": "A",
          "expr": "count_over_time({job=\"suricata\"} |= \"alert\" [1h])",
          "datasource": { "type": "loki", "uid": "${DS_LOKI}" }
        }
      ],
      "gridPos": { "h": 6, "w": 8, "x": 0, "y": 0 },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "colorMode": "value"
      }
    },
    {
      "id": 2,
      "title": "Alert Rate",
      "type": "timeseries",
      "targets": [
        {
          "refId": "A",
          "expr": "rate({job=\"suricata\"} |= \"alert\" [5m])",
          "datasource": { "type": "loki", "uid": "${DS_LOKI}" }
        }
      ],
      "gridPos": { "h": 6, "w": 16, "x": 8, "y": 0 },
      "options": {
        "legend": { "displayMode": "hidden" }
      }
    },
    {
      "id": 3,
      "title": "Recent Alerts",
      "type": "table",
      "targets": [
        {
          "refId": "A",
          "expr": "{job=\"suricata\"} |= \"alert\"",
          "datasource": { "type": "loki", "uid": "${DS_LOKI}" }
        }
      ],
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 6 },
      "options": { "showHeader": true }
    }
  ],
  "templating": { "list": [] },
  "annotations": {
    "list": []
  },
  "uid": "simple-security",
  "weekStart": ""
}
