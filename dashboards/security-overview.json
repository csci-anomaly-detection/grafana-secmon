{
  "id": null,
  "title": "Security Overview - Campus Network (new)",
  "tags": ["security", "overview", "alerts", "comprehensive"],
  "style": "dark",
  "timezone": "",
  "editable": true,
  "graphTooltip": 1,
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "refresh": "30s",
  "schemaVersion": 39,
  "version": 1,
  "templating": {
    "list": [
      {
        "allValue": ".*",
        "current": {
          "selected": true,
          "text": ["All"],
          "value": ["$__all"]
        },
        "hide": 0,
        "includeAll": true,
        "label": "Severity",
        "multi": true,
        "name": "severity",
        "options": [],
        "query": "label_values({job=\"suricata\", event_type=\"alert\"}, alert_severity)",
        "refresh": 2,
        "regex": "",
        "skipUrlSync": false,
        "sort": 1,
        "type": "query",
        "datasource": {
          "type": "loki",
          "uid": "${DS_LOKI}"
        }
      },
      {
        "allValue": ".*",
        "current": {
          "selected": true,
          "text": ["All"],
          "value": ["$__all"]
        },
        "hide": 0,
        "includeAll": true,
        "label": "Protocol",
        "multi": true,
        "name": "protocol",
        "options": [],
        "query": "label_values({job=\"suricata\", event_type=\"alert\"}, proto)",
        "refresh": 2,
        "regex": "",
        "skipUrlSync": false,
        "sort": 1,
        "type": "query",
        "datasource": {
          "type": "loki",
          "uid": "${DS_LOKI}"
        }
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "title": "ðŸš¨ Current Threat Level",
      "type": "stat",
      "targets": [
        {
          "refId": "A",
          "expr": "count_over_time({job=\"suricata\", event_type=\"alert\", alert_severity=\"1\"}[1h])",
          "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
          "legendFormat": "High"
        },
        {
          "refId": "B",
          "expr": "count_over_time({job=\"suricata\", event_type=\"alert\", alert_severity=\"2\"}[1h])",
          "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
          "legendFormat": "Medium"
        },
        {
          "refId": "C",
          "expr": "count_over_time({job=\"suricata\", event_type=\"alert\", alert_severity=\"3\"}[1h])",
          "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
          "legendFormat": "Low"
        }
      ],
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 0 },
      "options": {
        "reduceOptions": { 
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "colorMode": "background",
        "graphMode": "area",
        "orientation": "auto",
        "textMode": "auto",
        "wideLayout": true,
        "showPercentChange": false,
        "percentChangeColorMode": "standard"
      },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "hideFrom": {
              "legend": false,
              "tooltip": false,
              "vis": false
            }
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "orange", "value": 5 },
              { "color": "red", "value": 10 }
            ]
          },
          "unit": "short"
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "High" },
            "properties": [
              { "id": "color", "value": { "mode": "fixed", "fixedColor": "red" } }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Medium" },
            "properties": [
              { "id": "color", "value": { "mode": "fixed", "fixedColor": "orange" } }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Low" },
            "properties": [
              { "id": "color", "value": { "mode": "fixed", "fixedColor": "yellow" } }
            ]
          }
        ]
      }
    },
    {
      "id": 2,
      "title": "Alert Categories (Last Hour)",
      "type": "piechart",
      "targets": [
        {
          "refId": "A",
          "expr": "count by (alert_category) (count_over_time({job=\"suricata\", event_type=\"alert\", alert_severity=~\"$severity\", proto=~\"$protocol\"}[1h]))",
          "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
          "instant": true
        }
      ],
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 0 },
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "pieType": "pie",
        "tooltip": { "mode": "single", "sort": "none" },
        "legend": {
          "displayMode": "visible",
          "placement": "right",
          "calcs": [],
          "values": ["value", "percent"]
        },
        "displayLabels": ["name", "percent"]
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "hideFrom": {
              "legend": false,
              "tooltip": false,
              "vis": false
            }
          },
          "color": { "mode": "palette-classic" },
          "mappings": []
        }
      }
    },
    {
      "id": 3,
      "title": "Network Activity Summary",
      "type": "stat",
      "targets": [
        {
          "refId": "A",
          "expr": "count(count by (src_ip) (count_over_time({job=\"suricata\", event_type=\"alert\"}[1h])))",
          "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
          "legendFormat": "Unique Sources",
          "instant": true
        },
        {
          "refId": "B",
          "expr": "count(count by (dest_ip) (count_over_time({job=\"suricata\", event_type=\"alert\"}[1h])))",
          "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
          "legendFormat": "Unique Targets",
          "instant": true
        },
        {
          "refId": "C",
          "expr": "count(count by (proto) (count_over_time({job=\"suricata\", event_type=\"alert\"}[1h])))",
          "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
          "legendFormat": "Protocols",
          "instant": true
        }
      ],
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 0 },
      "options": {
        "reduceOptions": { 
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "colorMode": "value",
        "graphMode": "area",
        "orientation": "auto",
        "textMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "hideFrom": {
              "legend": false,
              "tooltip": false,
              "vis": false
            }
          },
          "unit": "short"
        }
      }
    },
    {
      "id": 4,
      "title": "Alert Timeline (Last Hour)",
      "type": "timeseries",
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (alert_severity) (count_over_time({job=\"suricata\", event_type=\"alert\", alert_severity=~\"$severity\", proto=~\"$protocol\"} |= \"\" [5m]))",
          "datasource": { "type": "loki", "uid": "${DS_LOKI}" }
        }
      ],
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 8 },
      "options": {
        "tooltip": { "mode": "multi", "sort": "none" },
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "calcs": ["lastNotNull", "max", "mean"],
          "values": ["value"]
        }
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "barAlignment": 0,
            "lineWidth": 2,
            "fillOpacity": 20,
            "gradientMode": "opacity",
            "spanNulls": false,
            "insertNulls": false,
            "showPoints": "auto",
            "pointSize": 5,
            "stacking": { "mode": "none", "group": "A" },
            "axisPlacement": "auto",
            "axisLabel": "",
            "axisColorMode": "text",
            "scaleDistribution": { "type": "linear" },
            "hideFrom": {
              "legend": false,
              "tooltip": false,
              "vis": false
            },
            "thresholdsStyle": { "mode": "off" }
          },
          "color": { "mode": "palette-classic" },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 80 }
            ]
          },
          "unit": "short"
        },
        "overrides": [
          {
            "matcher": { "id": "byRegexp", "options": "/.*1.*/" },
            "properties": [
              { "id": "color", "value": { "mode": "fixed", "fixedColor": "red" } },
              { "id": "displayName", "value": "High Severity" }
            ]
          },
          {
            "matcher": { "id": "byRegexp", "options": "/.*2.*/" },
            "properties": [
              { "id": "color", "value": { "mode": "fixed", "fixedColor": "orange" } },
              { "id": "displayName", "value": "Medium Severity" }
            ]
          },
          {
            "matcher": { "id": "byRegexp", "options": "/.*3.*/" },
            "properties": [
              { "id": "color", "value": { "mode": "fixed", "fixedColor": "yellow" } },
              { "id": "displayName", "value": "Low Severity" }
            ]
          }
        ]
      }
    },
    {
      "id": 5,
      "title": "Top Alert Sources",
      "type": "table",
      "targets": [
        {
          "refId": "A",
          "expr": "topk(10, count by (src_ip) (count_over_time({job=\"suricata\", event_type=\"alert\", alert_severity=~\"$severity\", proto=~\"$protocol\"}[1h])))",
          "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
          "instant": true
        }
      ],
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 16 },
      "transformations": [
        { "id": "seriesToRows", "options": {} },
        {
          "id": "organize",
          "options": {
            "renameByName": { 
              "Metric": "Source IP", 
              "Value": "Alert Count" 
            },
            "excludeByName": { "Time": true }
          }
        },
        {
          "id": "sortBy",
          "options": {
            "fields": {},
            "sort": [{ "field": "Alert Count", "desc": true }]
          }
        }
      ],
      "options": {
        "showHeader": true,
        "sortBy": [{ "desc": true, "displayName": "Alert Count" }]
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "cellOptions": { "type": "auto" },
            "inspect": false
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "orange", "value": 5 },
              { "color": "red", "value": 10 }
            ]
          },
          "color": { "mode": "thresholds" }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Alert Count" },
            "properties": [
              { "id": "custom.cellOptions", "value": { "type": "color-background" } }
            ]
          }
        ]
      }
    },
    {
      "id": 6,
      "title": "Top Alert Targets",
      "type": "table",
      "targets": [
        {
          "refId": "A",
          "expr": "topk(10, count by (dest_ip) (count_over_time({job=\"suricata\", event_type=\"alert\", alert_severity=~\"$severity\", proto=~\"$protocol\"}[1h])))",
          "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
          "instant": true
        }
      ],
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 16 },
      "transformations": [
        { "id": "seriesToRows", "options": {} },
        {
          "id": "organize",
          "options": {
            "renameByName": { 
              "Metric": "Target IP", 
              "Value": "Alert Count" 
            },
            "excludeByName": { "Time": true }
          }
        },
        {
          "id": "sortBy",
          "options": {
            "fields": {},
            "sort": [{ "field": "Alert Count", "desc": true }]
          }
        }
      ],
      "options": {
        "showHeader": true,
        "sortBy": [{ "desc": true, "displayName": "Alert Count" }]
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "cellOptions": { "type": "auto" },
            "inspect": false
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "orange", "value": 5 },
              { "color": "red", "value": 10 }
            ]
          },
          "color": { "mode": "thresholds" }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Alert Count" },
            "properties": [
              { "id": "custom.cellOptions", "value": { "type": "color-background" } }
            ]
          }
        ]
      }
    },
    {
      "id": 7,
      "title": "Protocol Distribution",
      "type": "bargauge",
      "targets": [
        {
          "refId": "A",
          "expr": "count by (proto) (count_over_time({job=\"suricata\", event_type=\"alert\", alert_severity=~\"$severity\", proto=~\"$protocol\"}[1h]))",
          "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
          "instant": true
        }
      ],
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 16 },
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "orientation": "horizontal",
        "text": {},
        "showUnfilled": true,
        "sizing": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "axisLabel": "",
            "axisPlacement": "auto",
            "barAlignment": 0,
            "drawStyle": "line",
            "fillOpacity": 80,
            "gradientMode": "none",
            "hideFrom": {
              "legend": false,
              "tooltip": false,
              "vis": false
            },
            "lineInterpolation": "linear",
            "lineWidth": 1,
            "pointSize": 5,
            "scaleDistribution": { "type": "linear" },
            "showPoints": "auto",
            "spanNulls": false,
            "stacking": { "group": "A", "mode": "none" },
            "thresholdsStyle": { "mode": "off" }
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 80 }
            ]
          },
          "unit": "short"
        }
      }
    },
    {
      "id": 8,
      "title": "Recent Critical Alerts",
      "type": "table",
      "targets": [
        {
          "refId": "A",
          "expr": "{job=\"suricata\", event_type=\"alert\", alert_severity=\"1\"} | json | line_format \"{{.timestamp}}|{{.src_ip}}:{{.src_port}}|{{.dest_ip}}:{{.dest_port}}|{{.proto}}|{{.alert.signature}}|{{.alert.category}}\"",
          "datasource": { "type": "loki", "uid": "${DS_LOKI}" }
        }
      ],
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 24 },
      "transformations": [
        {
          "id": "extractFields",
          "options": {
            "format": "auto",
            "source": "Line"
          }
        },
        {
          "id": "organize",
          "options": {
            "renameByName": {
              "Field 1": "Timestamp",
              "Field 2": "Source",
              "Field 3": "Destination", 
              "Field 4": "Protocol",
              "Field 5": "Alert Signature",
              "Field 6": "Category"
            },
            "excludeByName": { "Time": true, "Line": true, "id": true, "labels": true, "tsNs": true }
          }
        }
      ],
      "options": {
        "showHeader": true,
        "sortBy": [{ "desc": true, "displayName": "Timestamp" }]
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "cellOptions": { "type": "auto" },
            "inspect": false,
            "filterable": true
          },
          "mappings": [],
          "color": { "mode": "fixed", "fixedColor": "red" }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Alert Signature" },
            "properties": [
              { "id": "custom.width", "value": 300 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Category" },
            "properties": [
              { "id": "custom.width", "value": 200 }
            ]
          }
        ]
      }
    }
  ],
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": { "type": "grafana", "uid": "-- Grafana --" },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "target": {
          "limit": 100,
          "matchAny": false,
          "tags": [],
          "type": "dashboard"
        },
        "type": "dashboard"
      }
    ]
  },
  "uid": "security-overview",
  "weekStart": ""
}
