          "expr": "{job=\"suricata\"} | regexp \"(?P<src_ip>\\d+\\.\\d+\\.\\d+\\.\\d+):\\d+ -> (?P<dest_ip>\\d+\\.\\d+\\.\\d+\\.\\d+):\\d+\" | src_ip =~ \"${SrcIP}\" | dest_ip =~ \"${DstIP}\" | regexp \"\\[\\*\\*\\] \\[\\d+:\\d+:\\d+\\] (?P<signature>[^\\[]+)\" | signature =~ \"${Signature}\""
