{
  "id": null,
  "title": "Simple Security Monitor",
  "tags": ["security", "simple", "working"],
  "style": "dark",
  "timezone": "",
  "editable": true,
  "graphTooltip": 0,
  "time": {
    "from": "now-30m",
    "to": "now"
  },
  "refresh": "30s",
  "schemaVersion": 39,
  "version": 1,
  "panels": [
    {
      "id": 1,
      "title": "ðŸš¨ Security Alerts (Last 30min)",
      "type": "stat",
      "targets": [
        {
          "refId": "A",
          "expr": "count_over_time({job=\"suricata\", event_type=\"alert\"}[30m])",
          "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
          "legendFormat": "Total Alerts"
        }
      ],
      "gridPos": { "h": 6, "w": 8, "x": 0, "y": 0 },
      "options": {
        "reduceOptions": { 
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "colorMode": "background",
        "graphMode": "area",
        "orientation": "auto",
        "textMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "orange", "value": 5 },
              { "color": "red", "value": 10 }
            ]
          },
          "unit": "short",
          "mappings": [
            {
              "options": {
                "0": { "text": "âœ… No Alerts" }
              },
              "type": "value"
            }
          ]
        }
      }
    },
    {
      "id": 2,
      "title": "High Severity Alerts",
      "type": "stat",
      "targets": [
        {
          "refId": "A",
          "expr": "count_over_time({job=\"suricata\", event_type=\"alert\", alert_severity=\"1\"}[30m])",
          "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
          "legendFormat": "High Severity"
        }
      ],
      "gridPos": { "h": 6, "w": 8, "x": 8, "y": 0 },
      "options": {
        "reduceOptions": { 
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "colorMode": "background",
        "graphMode": "none",
        "orientation": "auto",
        "textMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "fixed", "fixedColor": "red" },
          "unit": "short",
          "mappings": [
            {
              "options": {
                "0": { "text": "âœ… None" }
              },
              "type": "value"
            }
          ]
        }
      }
    },
    {
      "id": 3,
      "title": "System Status",
      "type": "stat",
      "targets": [
        {
          "refId": "A",
          "expr": "count by (job) (count_over_time({job=~\".*\"}[5m]))",
          "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
          "instant": true
        }
      ],
      "gridPos": { "h": 6, "w": 8, "x": 16, "y": 0 },
      "options": {
        "reduceOptions": { 
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "colorMode": "value",
        "graphMode": "none",
        "orientation": "auto",
        "textMode": "value_and_name"
      },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "short"
        }
      }
    },
    {
      "id": 4,
      "title": "Recent Alerts",
      "type": "table",
      "targets": [
        {
          "refId": "A",
          "expr": "{job=\"suricata\", event_type=\"alert\"} | json",
          "datasource": { "type": "loki", "uid": "${DS_LOKI}" }
        }
      ],
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 6 },
      "options": {
        "showHeader": true,
        "sortBy": [{ "desc": true, "displayName": "Time" }]
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "cellOptions": { "type": "auto" },
            "inspect": false
          }
        }
      }
    }
  ],
  "templating": { "list": [] },
  "annotations": {
    "list": []
  },
  "uid": "simple-security",
  "weekStart": ""
}
