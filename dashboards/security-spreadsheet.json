{
  "id": null,
  "title": "Security Log Spreadsheet",
  "tags": ["security", "logs", "spreadsheet", "clean"],
  "style": "dark",
  "timezone": "",
  "editable": true,
  "graphTooltip": 0,
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "refresh": "30s",
  "schemaVersion": 39,
  "version": 1,
  "templating": {
    "list": [
      {
        "allValue": ".*",
        "current": {
          "selected": true,
          "text": ["All"],
          "value": ["$__all"]
        },
        "hide": 0,
        "includeAll": true,
        "label": "Severity",
        "multi": true,
        "name": "severity",
        "options": [],
        "query": "label_values({job=\"suricata\", event_type=\"alert\"}, alert_severity)",
        "refresh": 2,
        "regex": "",
        "skipUrlSync": false,
        "sort": 1,
        "type": "query",
        "datasource": {
          "type": "loki",
          "uid": "${DS_LOKI}"
        }
      },
      {
        "allValue": ".*",
        "current": {
          "selected": true,
          "text": ["All"],
          "value": ["$__all"]
        },
        "hide": 0,
        "includeAll": true,
        "label": "Category",
        "multi": true,
        "name": "category",
        "options": [],
        "query": "label_values({job=\"suricata\", event_type=\"alert\"}, alert_category)",
        "refresh": 2,
        "regex": "",
        "skipUrlSync": false,
        "sort": 1,
        "type": "query",
        "datasource": {
          "type": "loki",
          "uid": "${DS_LOKI}"
        }
      },
      {
        "current": {
          "selected": false,
          "text": "50",
          "value": "50"
        },
        "hide": 0,
        "label": "Max Results",
        "name": "max_results",
        "options": [
          { "selected": false, "text": "25", "value": "25" },
          { "selected": true, "text": "50", "value": "50" },
          { "selected": false, "text": "100", "value": "100" },
          { "selected": false, "text": "200", "value": "200" },
          { "selected": false, "text": "500", "value": "500" }
        ],
        "query": "25,50,100,200,500",
        "skipUrlSync": false,
        "type": "custom"
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "title": "📊 Current Alert Summary",
      "type": "stat",
      "targets": [
        {
          "refId": "A",
          "expr": "count_over_time({job=\"suricata\", event_type=\"alert\", alert_severity=\"1\", alert_category=~\"$category\"}[1h])",
          "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
          "legendFormat": "🔴 High"
        },
        {
          "refId": "B",
          "expr": "count_over_time({job=\"suricata\", event_type=\"alert\", alert_severity=\"2\", alert_category=~\"$category\"}[1h])",
          "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
          "legendFormat": "🟠 Medium"
        },
        {
          "refId": "C",
          "expr": "count_over_time({job=\"suricata\", event_type=\"alert\", alert_severity=\"3\", alert_category=~\"$category\"}[1h])",
          "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
          "legendFormat": "🟡 Low"
        }
      ],
      "gridPos": { "h": 4, "w": 24, "x": 0, "y": 0 },
      "options": {
        "reduceOptions": { 
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "colorMode": "value",
        "graphMode": "none",
        "orientation": "horizontal",
        "textMode": "value_and_name",
        "wideLayout": true
      },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "hideFrom": {
              "legend": false,
              "tooltip": false,
              "vis": false
            }
          },
          "mappings": [
            {
              "options": {
                "0": { "text": "✅ No Alerts" }
              },
              "type": "value"
            }
          ],
          "unit": "short"
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "🔴 High" },
            "properties": [
              { "id": "color", "value": { "mode": "fixed", "fixedColor": "red" } }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "🟠 Medium" },
            "properties": [
              { "id": "color", "value": { "mode": "fixed", "fixedColor": "orange" } }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "🟡 Low" },
            "properties": [
              { "id": "color", "value": { "mode": "fixed", "fixedColor": "yellow" } }
            ]
          }
        ]
      }
    },
    {
      "id": 2,
      "title": "🚨 Live Security Events (Clean View)",
      "type": "table",
      "targets": [
        {
          "refId": "A",
          "expr": "{job=\"suricata\", event_type=\"alert\", alert_severity=~\"$severity\", alert_category=~\"$category\"} | json | line_format \"{{.timestamp}}|{{.alert.severity}}|{{.src_ip}}:{{.src_port}}|{{.dest_ip}}:{{.dest_port}}|{{.proto}}|{{.alert.signature_id}}|{{.alert.signature}}|{{.alert.category}}\" | limit $max_results",
          "datasource": { "type": "loki", "uid": "${DS_LOKI}" }
        }
      ],
      "gridPos": { "h": 20, "w": 24, "x": 0, "y": 4 },
      "transformations": [
        {
          "id": "extractFields",
          "options": {
            "format": "auto",
            "source": "Line"
          }
        },
        {
          "id": "organize",
          "options": {
            "renameByName": {
              "Field 1": "Time",
              "Field 2": "Sev",
              "Field 3": "Source",
              "Field 4": "Destination",
              "Field 5": "Proto",
              "Field 6": "SID",
              "Field 7": "Alert Description",
              "Field 8": "Category"
            },
            "excludeByName": { 
              "Time": true, 
              "Line": true, 
              "id": true, 
              "labels": true, 
              "tsNs": true 
            }
          }
        }
      ],
      "options": {
        "showHeader": true,
        "sortBy": [{ "desc": true, "displayName": "Time" }],
        "footer": {
          "show": false,
          "reducer": ["sum"],
          "countRows": false,
          "fields": ""
        }
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "cellOptions": { "type": "auto" },
            "inspect": false,
            "filterable": true
          },
          "mappings": [
            {
              "options": {
                "1": { "text": "🔴 HIGH", "color": "red" },
                "2": { "text": "🟠 MED", "color": "orange" },
                "3": { "text": "🟡 LOW", "color": "yellow" }
              },
              "type": "value"
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "transparent", "value": null }
            ]
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Time" },
            "properties": [
              { "id": "custom.width", "value": 180 },
              { "id": "unit", "value": "time:YYYY-MM-DD HH:mm:ss" }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Sev" },
            "properties": [
              { "id": "custom.cellOptions", "value": { "type": "color-text" } },
              { "id": "custom.width", "value": 80 },
              { "id": "custom.align", "value": "center" }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Source" },
            "properties": [
              { "id": "custom.width", "value": 140 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Destination" },
            "properties": [
              { "id": "custom.width", "value": 140 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Proto" },
            "properties": [
              { "id": "custom.width", "value": 60 },
              { "id": "custom.align", "value": "center" }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "SID" },
            "properties": [
              { "id": "custom.width", "value": 80 },
              { "id": "custom.align", "value": "center" }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Alert Description" },
            "properties": [
              { "id": "custom.width", "value": 350 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Category" },
            "properties": [
              { "id": "custom.width", "value": 250 }
            ]
          }
        ]
      }
    },
    {
      "id": 3,
      "title": "📈 Alert Frequency (Last Hour)",
      "type": "table",
      "targets": [
        {
          "refId": "A",
          "expr": "topk(20, count by (alert_signature) (count_over_time({job=\"suricata\", event_type=\"alert\", alert_severity=~\"$severity\", alert_category=~\"$category\"} | json [1h])))",
          "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
          "instant": true
        }
      ],
      "gridPos": { "h": 12, "w": 12, "x": 0, "y": 24 },
      "transformations": [
        { "id": "seriesToRows", "options": {} },
        {
          "id": "organize",
          "options": {
            "renameByName": { 
              "Metric": "Alert Signature", 
              "Value": "Count" 
            },
            "excludeByName": { "Time": true }
          }
        },
        {
          "id": "sortBy",
          "options": {
            "fields": {},
            "sort": [{ "field": "Count", "desc": true }]
          }
        }
      ],
      "options": {
        "showHeader": true,
        "sortBy": [{ "desc": true, "displayName": "Count" }]
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "cellOptions": { "type": "auto" },
            "inspect": false
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 2 },
              { "color": "orange", "value": 5 },
              { "color": "red", "value": 10 }
            ]
          },
          "color": { "mode": "thresholds" }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Count" },
            "properties": [
              { "id": "custom.cellOptions", "value": { "type": "color-background" } },
              { "id": "custom.width", "value": 80 }
            ]
          }
        ]
      }
    },
    {
      "id": 4,
      "title": "🌐 Network Activity Summary",
      "type": "table",
      "targets": [
        {
          "refId": "A",
          "expr": "topk(15, count by (src_ip) (count_over_time({job=\"suricata\", event_type=\"alert\", alert_severity=~\"$severity\", alert_category=~\"$category\"} [1h])))",
          "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
          "instant": true
        }
      ],
      "gridPos": { "h": 12, "w": 12, "x": 12, "y": 24 },
      "transformations": [
        { "id": "seriesToRows", "options": {} },
        {
          "id": "organize",
          "options": {
            "renameByName": { 
              "Metric": "Source IP", 
              "Value": "Alerts" 
            },
            "excludeByName": { "Time": true }
          }
        },
        {
          "id": "sortBy",
          "options": {
            "fields": {},
            "sort": [{ "field": "Alerts", "desc": true }]
          }
        }
      ],
      "options": {
        "showHeader": true,
        "sortBy": [{ "desc": true, "displayName": "Alerts" }]
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "cellOptions": { "type": "auto" },
            "inspect": false
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 5 },
              { "color": "orange", "value": 15 },
              { "color": "red", "value": 30 }
            ]
          },
          "color": { "mode": "thresholds" }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Alerts" },
            "properties": [
              { "id": "custom.cellOptions", "value": { "type": "color-background" } },
              { "id": "custom.width", "value": 80 }
            ]
          }
        ]
      }
    }
  ],
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": { "type": "grafana", "uid": "-- Grafana --" },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "target": {
          "limit": 100,
          "matchAny": false,
          "tags": [],
          "type": "dashboard"
        },
        "type": "dashboard"
      }
    ]
  },
  "uid": "security-spreadsheet",
  "weekStart": ""
}
